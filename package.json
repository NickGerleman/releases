{
  "name": "react-native-releas-repo",
  "version": "0.0.0",
  "private": true,
  "description": "Repo for the react-native release infrastructure",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@react-native-community/*"
    ]
  },
  "scripts": {
    "build": "lage build",
    "lint": "lage lint --verbose",
    "lint:fix": "lage lint:fix",
    "clean": "lage clean",
    "test": "lage test --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.4.0",
    "lage": "^0.29.3",
    "@rnw-scripts/jest-unittest-config": "1.2.1"
  },
  "resolutions": {
    "@rnw-scripts/babel-node-config": "0.0.2"
  }
}
